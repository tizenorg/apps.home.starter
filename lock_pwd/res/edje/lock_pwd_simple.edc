					rel2 { relative: 1.0 1.0; to: "bg"; }
				}
			}
		}
		programs {
			program {
				name: "init.layout";
				signal: "load";
				source: "";
				script {
					set_state(PART:"0_number", "center", 0.0);
				}
			}

			INPUT_PROGRAM(0)
			INPUT_PROGRAM(1)
			INPUT_PROGRAM(2)
			INPUT_PROGRAM(3)

			PROG_KEYPAD_BUTTON("1")
